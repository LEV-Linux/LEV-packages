# Template file for 'dwm'
pkgname=lev-dwm
version=1.2
revision=1
wrksrc="dwm-${version}"
makedepends="libXinerama-devel libXft-devel freetype-devel fontconfig-devel libX11-devel libxcb-devel"
short_desc="LEV Linux's fork of the dynamic window manager"
maintainer="SalahDin Ahmed Salh Rezk <salah2112004@gmail.com>"
license="MIT"
homepage="https://lev-linux.github.io"
distfiles="https://github.com/salahdin-ahmed/dwm/archive/refs/tags/v${version}.tar.gz"
checksum=c15b45d5331939c20a07df19b1c9cc4e66ee85cbcebbec12e0d410a4f31d3abb

do_build() {
	[ -e ${FILESDIR}/config.h ] && cp ${FILESDIR}/config.h config.h
	sed -i "/CFLAGS/s|\${CPPFLAGS}|& $CFLAGS|g" config.mk
	sed -i "/LDFLAGS/s|\-s|$LDFLAGS|g" config.mk
	make CC=$CC INCS="-I. -I${XBPS_CROSS_BASE}/usr/include/freetype2" LIBS="-lX11 -lXinerama -lXft -lfontconfig -lX11-xcb -lxcb -lxcb-res"
}

do_install() {
	make PREFIX=/usr DESTDIR=$DESTDIR install
	vinstall README 644 usr/share/doc/$pkgname
	vlicense LICENSE
}
